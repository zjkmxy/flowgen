{
  "name": "flowgen",
  "description": "Generate flowtype definition files from TypeScript",
  "version": "1.21.0",
  "type": "module",
  "bin": {
    "flowgen": "./lib/cli/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joarwilk/flowgen.git"
  },
  "dependencies": {
    "@babel/code-frame": "^7.16.7",
    "@babel/highlight": "^7.16.7",
    "commander": "^12.1.0",
    "lodash": "^4.17.20",
    "prettier": "^3.3.3",
    "shelljs": "^0.8.4",
    "typescript": "~5.6.2",
    "typescript-compiler": "^1.4.1-2"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.7",
    "@babel/core": "^7.25.2",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-typescript": "^7.16.7",
    "@types/babel__code-frame": "^7.0.3",
    "@types/jest": "^29.5.13",
    "@types/lodash": "^4.14.161",
    "@types/node": "^22.5.5",
    "@types/prettier": "^3.0.0",
    "@types/react": "^18.3.5",
    "@types/shelljs": "^0.8.7",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^29.7.0",
    "chalk": "^5.3.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-prettier": "^5.2.1",
    "flow-bin": "^0.246.0",
    "jest": "^29.7.0",
    "mongodb": "^6.9.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2"
  },
  "files": [
    "lib",
    "index.js.flow"
  ],
  "license": "ISC",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prepublishOnly": "npm run compile & npm run type",
    "type": "tsc -p tsconfig.declaration.json",
    "compile": "babel ./src --extensions '.ts,.tsx,.js' --out-dir lib --delete-dir-on-start --ignore 'src/**/*.spec.ts' --ignore 'src/__tests__/'",
    "compile:watch": "npm run compile -- -w",
    "test": "node --experimental-vm-modules $(yarn bin jest) src/**/*.spec.ts",
    "test:watch": "node --experimental-vm-modules $(yarn bin jest) src/**/*.spec.ts --watch",
    "lint": "eslint '**/*.{js,ts,tsx}' --quiet"
  }
}
